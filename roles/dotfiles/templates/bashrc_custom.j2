# Ansible managed custom bash configuration

# History configuration
export HISTSIZE=10000
export HISTFILESIZE=20000
export HISTCONTROL=ignoreboth:erasedups
export HISTIGNORE="ls:ll:cd:pwd:exit:clear:history"
export HISTTIMEFORMAT="%Y-%m-%d %H:%M:%S "

# Append to history file
shopt -s histappend

# Check window size after each command
shopt -s checkwinsize

# Enable globstar (** for recursive matching)
if shopt -s globstar; then
    :  # globstar enabled successfully
else
    echo "[UBOOTU WARNING] globstar option not available in this bash version" >&2
fi

# Case-insensitive globbing
shopt -s nocaseglob

# Autocorrect typos in path names
shopt -s cdspell

# Enable extended globbing
shopt -s extglob

# Custom prompt (if not using a prompt decorator)
{% if prompt_decorator == 'none' %}
# Git branch in prompt
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}

# Set prompt
export PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[33m\]$(parse_git_branch)\[\033[00m\]\$ '
{% endif %}

# Better ls colors
export LS_COLORS='di=34:ln=35:so=32:pi=33:ex=31:bd=34;46:cd=34;43:su=30;41:sg=30;46:tw=30;42:ow=30;43'

# Editor settings
export EDITOR="{{ 'code --wait' if 'vscode' in code_editors else 'vim' }}"
export VISUAL="$EDITOR"

# Pager settings
export PAGER='less'
export LESS='-R -F -X'

# Man page colors
export LESS_TERMCAP_mb=$'\e[1;31m'
export LESS_TERMCAP_md=$'\e[1;36m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;32m'

# FZF configuration (if installed)
if command -v fzf; then
    export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
    
    # Use fd if available, otherwise fall back to find
    if command -v fd; then
        export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
    else
        echo "[UBOOTU INFO] fd not found, using find for FZF" >&2
        echo "  For better performance, install fd: sudo apt install fd-find" >&2
        export FZF_DEFAULT_COMMAND='find . -type f -not -path "*/\.git/*"'
    fi
    export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
    
    # Source FZF bash integration
    [ -f /usr/share/doc/fzf/examples/key-bindings.bash ] && source /usr/share/doc/fzf/examples/key-bindings.bash
    [ -f /usr/share/doc/fzf/examples/completion.bash ] && source /usr/share/doc/fzf/examples/completion.bash
fi

# Zoxide configuration (if installed)
if command -v zoxide; then
    eval "$(zoxide init bash)"
else
    echo "[UBOOTU INFO] zoxide not installed (smart cd replacement)" >&2
fi

# McFly configuration (if installed)
if command -v mcfly; then
    eval "$(mcfly init bash)"
else
    echo "[UBOOTU INFO] mcfly not installed (intelligent shell history)" >&2
fi

# Functions
mkcd() {
    mkdir -p "$1" && cd "$1"
}

extract() {
    if [ -f "$1" ]; then
        case "$1" in
            *.tar.bz2)   tar xjf "$1"   ;;
            *.tar.gz)    tar xzf "$1"   ;;
            *.bz2)       bunzip2 "$1"   ;;
            *.rar)       unrar x "$1"   ;;
            *.gz)        gunzip "$1"    ;;
            *.tar)       tar xf "$1"    ;;
            *.tbz2)      tar xjf "$1"   ;;
            *.tgz)       tar xzf "$1"   ;;
            *.zip)       unzip "$1"     ;;
            *.Z)         uncompress "$1";;
            *.7z)        7z x "$1"      ;;
            *)           echo "'$1' cannot be extracted" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

# Quick backup function
backup() {
    cp "$1" "$1.backup-$(date +%Y%m%d-%H%M%S)"
}