# Ansible managed custom zsh configuration

# History configuration
HISTSIZE=10000
SAVEHIST=20000
HISTFILE=~/.zsh_history
setopt EXTENDED_HISTORY
setopt HIST_EXPIRE_DUPS_FIRST
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_SPACE
setopt HIST_VERIFY
setopt SHARE_HISTORY

# Directory navigation
setopt AUTO_CD
setopt AUTO_PUSHD
setopt PUSHD_IGNORE_DUPS
setopt PUSHD_SILENT

# Completion
setopt COMPLETE_IN_WORD
setopt ALWAYS_TO_END
setopt MENU_COMPLETE
setopt AUTO_MENU
setopt LIST_AMBIGUOUS

# Globbing
setopt EXTENDED_GLOB
setopt NO_CASE_GLOB
setopt NUMERIC_GLOB_SORT

# Correction
setopt CORRECT
setopt CORRECT_ALL

# Environment
export EDITOR="{{ 'code --wait' if 'vscode' in code_editors else 'vim' }}"
export VISUAL="$EDITOR"
export PAGER='less'
export LESS='-R -F -X'

# Key bindings
bindkey -e  # Emacs mode
bindkey '^[[A' history-substring-search-up
bindkey '^[[B' history-substring-search-down
bindkey '^[[3~' delete-char
bindkey '^[3;5~' delete-word

# FZF configuration (if installed)
if command -v fzf; then
    export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'
    
    # Use fd if available, otherwise fall back to find
    if command -v fd; then
        export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
    else
        echo "[UBOOTU INFO] fd not found, using find for FZF" >&2
        echo "  For better performance, install fd: sudo apt install fd-find" >&2
        export FZF_DEFAULT_COMMAND='find . -type f -not -path "*/\.git/*"'
    fi
    export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
    
    # Source FZF zsh integration
    [ -f /usr/share/doc/fzf/examples/key-bindings.zsh ] && source /usr/share/doc/fzf/examples/key-bindings.zsh
    [ -f /usr/share/doc/fzf/examples/completion.zsh ] && source /usr/share/doc/fzf/examples/completion.zsh
fi

# Zoxide configuration (if installed)
if command -v zoxide; then
    eval "$(zoxide init zsh)"
else
    echo "[UBOOTU INFO] zoxide not installed (smart cd replacement)" >&2
fi

# McFly configuration (if installed)
if command -v mcfly; then
    eval "$(mcfly init zsh)"
else
    echo "[UBOOTU INFO] mcfly not installed (intelligent shell history)" >&2
fi

# Functions
mkcd() {
    mkdir -p "$1" && cd "$1"
}

extract() {
    if [ -f "$1" ]; then
        case "$1" in
            *.tar.bz2)   tar xjf "$1"   ;;
            *.tar.gz)    tar xzf "$1"   ;;
            *.bz2)       bunzip2 "$1"   ;;
            *.rar)       unrar x "$1"   ;;
            *.gz)        gunzip "$1"    ;;
            *.tar)       tar xf "$1"    ;;
            *.tbz2)      tar xjf "$1"   ;;
            *.tgz)       tar xzf "$1"   ;;
            *.zip)       unzip "$1"     ;;
            *.Z)         uncompress "$1";;
            *.7z)        7z x "$1"      ;;
            *)           echo "'$1' cannot be extracted" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

# Quick backup function
backup() {
    cp "$1" "$1.backup-$(date +%Y%m%d-%H%M%S)"
}

# Custom prompt (if not using a prompt decorator)
{% if prompt_decorator == 'none' %}
# Load version control information
autoload -Uz vcs_info
precmd() { vcs_info }

# Format the vcs_info_msg_0_ variable
zstyle ':vcs_info:git:*' formats ' (%b)'

# Set up the prompt
setopt PROMPT_SUBST
PROMPT='%F{green}%n@%m%f:%F{blue}%~%f%F{yellow}${vcs_info_msg_0_}%f$ '
{% endif %}