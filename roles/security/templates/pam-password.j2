# PAM password configuration for super hardening
# This file is managed by Ansible - do not edit manually

password requisite pam_pwquality.so retry=3 \
    minlen={{ pam_password_minlen }} \
    dcredit={{ pam_password_dcredit }} \
    ucredit={{ pam_password_ucredit }} \
    ocredit={{ pam_password_ocredit }} \
    lcredit={{ pam_password_lcredit }} \
    difok={{ pam_password_difok }} \
    maxrepeat={{ pam_password_maxrepeat }} \
    maxclassrepeat={{ pam_password_maxclassrepeat }} \
    gecoscheck={{ pam_password_gecoscheck }} \
    dictcheck={{ pam_password_dictcheck }} \
    usercheck={{ pam_password_usercheck }} \
    enforcing={{ pam_password_enforcing }}

password [success=1 default=ignore] pam_unix.so obscure use_authtok try_first_pass yescrypt rounds=11
password requisite pam_deny.so
password required pam_permit.so
password optional pam_gnome_keyring.so